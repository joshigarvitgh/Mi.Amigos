<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="50dp"

    android:background="#BB000000"

    android:id="@+id/navPage"

    tools:context="trial.trial_first.FNavigation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FFFFFF"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#6A0054"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentBottom="true"
                android:padding="30dp"
                >

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/loginlogo"
                    android:layout_marginBottom="20dp"
                    />

                <TextView
                    android:id="@+id/heyUserText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hey, Chaitanya"
                    android:textColor="#FFFFFF"
                    android:textSize="25dp"
                    />

                <TextView
                    android:id="@+id/emailUserText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="chaitanya@gmail.com"
                    android:textColor="#FFFFFF"
                    android:textSize="15dp"
                    android:layout_marginTop="5dp"
                    />

            </LinearLayout>

        </RelativeLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:background="@drawable/navbtn"
                    android:paddingLeft="25dp"
                    android:paddingRight="25dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:id="@+id/firstOptionIcon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/icontaketest"
                        />

                    <TextView
                        android:id="@+id/navFirstOption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Take a test"
                        android:textColor="#666666"
                        android:textSize="20dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:background="@drawable/navbtn"
                    android:paddingLeft="25dp"
                    android:paddingRight="25dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:id="@+id/secondOptionIcon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/icongeofence"
                        />

                    <TextView
                        android:id="@+id/navSecondOption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Create Geofence"
                        android:textColor="#666666"
                        android:textSize="20dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:background="@drawable/navbtn"
                    android:paddingLeft="25dp"
                    android:paddingRight="25dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:id="@+id/thirdOptionIcon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/iconassesment"
                        />

                    <TextView
                        android:id="@+id/navThirdOption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Assesment"
                        android:textColor="#666666"
                        android:textSize="20dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:background="@drawable/navbtn"
                    android:paddingLeft="25dp"
                    android:paddingRight="25dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:id="@+id/fourthOptionIcon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/iconsettings"
                        />

                    <TextView
                        android:id="@+id/navFourthOption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Settings"
                        android:textColor="#666666"
                        android:textSize="20dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:background="@drawable/navbtn"
                    android:paddingLeft="25dp"
                    android:paddingRight="25dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:id="@+id/fifthOptionIcon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/iconaskus"
                        />

                    <TextView
                        android:id="@+id/navFifthOption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ask Us"
                        android:textColor="#666666"
                        android:textSize="20dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:background="@drawable/navbtn"
                    android:paddingLeft="25dp"
                    android:paddingRight="25dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:id="@+id/sixthOptionIcon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/iconoverallprogress"
                        />

                    <TextView
                        android:id="@+id/navSixthOption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Overall Progress"
                        android:textColor="#666666"
                        android:textSize="20dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:background="@drawable/navbtn"
                    android:paddingLeft="25dp"
                    android:paddingRight="25dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:id="@+id/seventhOptionIcon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/iconmusica"
                        />

                    <TextView
                        android:id="@+id/navSeventhOption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Musicia"
                        android:textColor="#666666"
                        android:textSize="20dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:background="@drawable/navbtn"
                    android:paddingLeft="25dp"
                    android:paddingRight="25dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:id="@+id/eightOptionIcon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/iconcontact"
                        />

                    <TextView
                        android:id="@+id/navEightOption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contact Us"
                        android:textColor="#666666"
                        android:textSize="20dp"
                        />

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>


</RelativeLayout>