<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="trial.trial_first.Assessment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/weekbtn"
                android:layout_marginTop="15dp"
                android:paddingLeft="35dp"
                android:paddingRight="35dp"
                android:paddingTop="25dp"
                android:paddingBottom="25dp"
                android:orientation="vertical"
                android:clickable="true"
                >

                <TextView
                    android:id="@+id/weekOneTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Week 01"
                    android:textColor="#6A0054"
                    android:textSize="20dp"
                    />

                <ProgressBar
                    android:id="@+id/progressbar1"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    android:progressDrawable="@drawable/myprogressbar"
                    />

                <TextView
                    android:id="@+id/weekOneAttempts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Questions attempted : "
                    android:textColor="#999999"
                    android:textSize="18dp"
                    />

            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/weekbtn"
                android:layout_marginTop="15dp"
                android:paddingLeft="35dp"
                android:paddingRight="35dp"
                android:paddingTop="25dp"
                android:paddingBottom="25dp"
                android:orientation="vertical"
                android:clickable="true"
                >

                <TextView
                    android:id="@+id/weekTwoTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Week 02"
                    android:textColor="#999999"
                    android:textSize="20dp"
                    />

                <ProgressBar
                    android:id="@+id/progressbar2"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    android:progressDrawable="@drawable/myprogressbar"
                    />

                <TextView
                    android:id="@+id/weekTwoAttempts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Questions attempted : "
                    android:textColor="#999999"
                    android:textSize="18dp"
                    />

            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/weekbtn"
                android:layout_marginTop="15dp"
                android:paddingLeft="35dp"
                android:paddingRight="35dp"
                android:paddingTop="25dp"
                android:paddingBottom="25dp"
                android:orientation="vertical"
                android:clickable="true"
                >

                <TextView
                    android:id="@+id/weekThreeTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Week 03"
                    android:textColor="#999999"
                    android:textSize="20dp"
                    />

                <ProgressBar
                    android:id="@+id/progressbar3"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    android:progressDrawable="@drawable/myprogressbar"
                    />

                <TextView
                    android:id="@+id/weekThreeAttempts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Questions attempted : "
                    android:textColor="#999999"
                    android:textSize="18dp"
                    />

            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/weekbtn"
                android:layout_marginTop="15dp"
                android:paddingLeft="35dp"
                android:paddingRight="35dp"
                android:paddingTop="25dp"
                android:paddingBottom="25dp"
                android:orientation="vertical"
                android:clickable="true"
                >

                <TextView
                    android:id="@+id/weekFourTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Week 04"
                    android:textColor="#999999"
                    android:textSize="20dp"
                    />

                <ProgressBar
                    android:id="@+id/progressbar4"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    android:progressDrawable="@drawable/myprogressbar"
                    />

                <TextView
                    android:id="@+id/weekFourAttempts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Questions attempted : "
                    android:textColor="#999999"
                    android:textSize="18dp"
                    />

            </LinearLayout>




            <TextView
                android:id="@+id/showMoreBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:text="Show More"
                android:textColor="#999999"
                android:textSize="15dp"
                android:textAlignment="center"
            />

    </LinearLayout>
</ScrollView>

</LinearLayout>
