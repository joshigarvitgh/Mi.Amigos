<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="10dp"
    tools:context="trial.trial_first.QuestionAnswer">

    <ProgressBar
        android:id="@+id/progressbarqanda"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:progress="45"
        android:layout_marginBottom="5dp"
        android:progressDrawable="@drawable/myprogressbar"
        />

    <LinearLayout
        android:id="@+id/answerTray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        >

        <Button
            android:id="@+id/answer1"
            android:layout_gravity="right"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Answer"
            android:textSize="15dp"
            android:textColor="#6A0054"
            android:background="@drawable/ansbtn"
            />

        <Button
            android:id="@+id/answer2"
            android:layout_gravity="right"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Answer Two - 2"
            android:textSize="15dp"
            android:textColor="#6A0054"
            android:background="@drawable/ansbtn"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/question"
        android:layout_above="@id/answerTray"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Question"
        android:textColor="#444444"
        android:textSize="25dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        />

    <VideoView
        android:id="@+id/videoViewBrain"
        android:layout_width="96dp"
        android:layout_height="72dp"
        android:layout_above="@id/question"
        android:layout_marginBottom="20dp"
        />

    <VideoView
        android:id="@+id/videoViewThreeDots"
        android:layout_width="96dp"
        android:layout_height="24dp"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>